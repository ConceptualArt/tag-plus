{
    "manifest_version": 3,
    "name": "Highlight Extractor",
    "version": "1.0",
    "description": "Tag+ Extention",
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon.png",
            "48": "icons/icon.png",
            "128": "icons/icon.png"
        }
    },
    "side_panel": {
        "default_path": "popup.html"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "clipboardWrite",
        "tabGroups",
        "sidePanel"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "icons": {
        "16": "icons/icon.png",
        "48": "icons/icon.png",
        "128": "icons/icon.png"
    }
}